

<!--@recipe is a Recipe class object-->
<h1><%= @recipe.name %></h1>



<h3>Description</h3>
  <% if !@recipe.description.nil? %>
    <p><%= @recipe.description %></p>
  <% else %>
    <p>This recipe doesn't have a description.</p>
  <% end %>

<h3>Instructions</h3>
  <% if !@recipe.instructions.nil? %>
    <p><%= @recipe.instructions %></p>
  <% else %>
    <p>This recipe doesn't have any instructions.</p>
  <% end %>

<h2>Ingredients</h2>
<ul>
<% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
</ul>



<p><a href="/recipes">Back to Recipes</a></p>
